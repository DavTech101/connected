{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "target": "esnext",
    "module": "CommonJS",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@data/*": ["./data/*"],
      "@utils/*": ["./src/utils/*"],
      "@Types/*": ["./src/types/*"],
      "@config/*": ["./src/config/*"]
    }
  },
  "include": ["./*.js", "src/**/*.ts", "test/**/*.ts", "config/index.ts"]
}
